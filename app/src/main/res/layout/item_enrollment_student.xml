<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/gradient_student_card"
    android:orientation="horizontal"
    android:padding="20dp"
    android:gravity="center_vertical"
    android:elevation="6dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <!-- Avatar Container -->
    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circle_avatar_bg"
        android:gravity="center"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/tv_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="👤"
            android:textSize="28sp" />

    </LinearLayout>

    <!-- Student Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Student Name -->
        <TextView
            android:id="@+id/tv_student_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên học viên"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:shadowColor="#40000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Student ID -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🆔"
                android:textSize="12sp"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/tv_student_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID: 123456"
                android:textSize="13sp"
                android:textColor="@android:color/white"
                android:alpha="0.8" />

        </LinearLayout>

        <!-- Course Info -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="📚"
                android:textSize="12sp"
                android:layout_marginEnd="4dp" />

            <TextView
                android:id="@+id/tv_course_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên khóa học"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:alpha="0.9"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Course ID -->
        <TextView
            android:id="@+id/tv_course_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course ID: ABC123"
            android:textSize="11sp"
            android:textColor="@android:color/white"
            android:alpha="0.6"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- Status Indicator -->
    <View
        android:layout_width="6dp"
        android:layout_height="50dp"
        android:background="@drawable/status_indicator"
        android:layout_marginStart="8dp" />

</LinearLayout>
