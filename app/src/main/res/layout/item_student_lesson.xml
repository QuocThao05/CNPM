<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_lesson"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Left side: Lesson number and completion status -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/tv_lesson_order"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="Bài 1"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@android:drawable/ic_menu_info_details"
                android:layout_marginBottom="4dp" />

            <!-- Completion Status Icon -->
            <ImageView
                android:id="@+id/iv_completion_status"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_agenda"
                android:visibility="visible" />

        </LinearLayout>

        <!-- Main content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Lesson title and type -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tv_lesson_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lesson Title"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tv_lesson_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Văn bản"
                    android:textSize="11sp"
                    android:textColor="@android:color/white"
                    android:background="@android:drawable/ic_menu_sort_by_size"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Estimated time -->
            <TextView
                android:id="@+id/tv_estimated_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⏱ 30 phút"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginBottom="8dp" />

            <!-- Grammar preview (only for Grammar lessons) -->
            <TextView
                android:id="@+id/tv_grammar_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📝 Grammar structure"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginBottom="8dp"
                android:visibility="gone" />

            <!-- Completion Status and Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Completion Status Text -->
                <TextView
                    android:id="@+id/tv_completion_status"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Chưa hoàn thành"
                    android:textSize="12sp"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textStyle="italic" />

                <!-- Mark as Complete Button -->
                <Button
                    android:id="@+id/btn_mark_complete"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="Hoàn thành"
                    android:textSize="11sp"
                    android:textColor="@android:color/holo_blue_bright"
                    android:background="@android:drawable/btn_default"
                    android:layout_marginStart="8dp"
                    android:minWidth="0dp"
                    android:paddingHorizontal="12dp"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

        <!-- Right side: Play icon and favorite button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginStart="8dp">

            <!-- Play Icon -->
            <ImageView
                android:id="@+id/iv_play_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@android:drawable/ic_media_play"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                android:layout_marginBottom="4dp"
                android:visibility="visible" />

            <!-- Favorite Button -->
            <ImageButton
                android:id="@+id/btn_favorite"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_myplaces"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="2dp"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
