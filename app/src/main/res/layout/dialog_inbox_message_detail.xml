<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <!-- Message Type Badge -->
        <TextView
            android:id="@+id/tv_message_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông báo"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_blue_light"
            android:padding="8dp"
            android:layout_marginEnd="12dp" />

        <!-- Date -->
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="28/07/2025 14:30"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="end" />

    </LinearLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tiêu đề tin nhắn"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp" />

    <!-- From Info -->
    <TextView
        android:id="@+id/tv_from_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Từ: Giáo viên"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:textStyle="italic"
        android:layout_marginBottom="8dp" />

    <!-- Course Name -->
    <TextView
        android:id="@+id/tv_course_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Khóa học: Tiếng Anh Cơ Bản"
        android:textSize="14sp"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />

    <!-- Original Feedback (only for feedback responses) -->
    <LinearLayout
        android:id="@+id/layout_original_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/holo_blue_bright"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đánh giá ban đầu của bạn:"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_original_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nội dung đánh giá ban đầu..."
            android:textSize="14sp"
            android:textColor="@android:color/black" />

    </LinearLayout>

    <!-- Message Content -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nội dung tin nhắn:"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="200dp"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/tv_full_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nội dung đầy đủ của tin nhắn sẽ hiển thị ở đây..."
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:lineSpacingExtra="4dp" />

    </ScrollView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btn_mark_as_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đánh dấu đã đọc"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@android:color/holo_green_dark"
            android:textColor="@android:color/white"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_view_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem khóa học"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:textColor="@android:color/white"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đóng"
            android:backgroundTint="@android:color/darker_gray"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>
