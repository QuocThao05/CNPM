<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="Học bài"
            app:titleTextColor="@android:color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Lesson Header Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@android:color/holo_blue_light">

                    <TextView
                        android:id="@+id/tv_lesson_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tiêu đề bài học"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_lesson_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="📝 Văn bản"
                            android:textSize="14sp"
                            android:textColor="@android:color/white"
                            android:background="@android:drawable/ic_menu_sort_by_size"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/tv_estimated_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="⏱ 30 phút"
                            android:textSize="14sp"
                            android:textColor="@android:color/white"
                            android:alpha="0.9" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/tv_lesson_order"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bài 1"
                            android:textSize="12sp"
                            android:textColor="@android:color/white"
                            android:background="@android:drawable/ic_menu_sort_by_size"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="2dp"
                            android:alpha="0.8" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Lesson Content Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📖 Nội dung bài học"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/tv_lesson_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nội dung bài học sẽ hiển thị ở đây..."
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:lineSpacingExtra="4dp"
                        android:textIsSelectable="true" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Grammar Content (if applicable) -->
            <LinearLayout
                android:id="@+id/card_grammar_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:visibility="gone">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="📚 Ngữ pháp"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:layout_marginBottom="16dp" />

                        <TextView
                            android:id="@+id/tv_grammar_rule"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Quy tắc ngữ pháp"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tv_grammar_explanation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Giải thích ngữ pháp"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:id="@+id/tv_grammar_examples"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ví dụ:"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"
                            android:textStyle="italic" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Vocabulary Content (if applicable) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_vocabulary_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="📖 Từ vựng"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/tv_vocabulary_word"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Từ vựng"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tv_vocabulary_pronunciation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Phát âm"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tv_vocabulary_meaning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nghĩa"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tv_vocabulary_example"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ví dụ"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"
                        android:textStyle="italic" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_previous_lesson"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="⬅ Trước"
                    android:layout_marginEnd="8dp"
                    android:enabled="false" />

                <Button
                    android:id="@+id/btn_mark_complete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Đánh dấu hoàn thành"
                    android:backgroundTint="@android:color/holo_green_light"
                    android:textColor="@android:color/white"
                    android:layout_marginHorizontal="8dp" />

                <Button
                    android:id="@+id/btn_next_lesson"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tiếp ➡"
                    android:layout_marginStart="8dp"
                    android:enabled="false" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
