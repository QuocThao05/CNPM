<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header với số câu hỏi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tv_question_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="📝 Câu 1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_purple" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="✏️ Sửa"
                    android:textSize="12sp"
                    android:backgroundTint="@android:color/holo_blue_light"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="8dp"
                    android:minWidth="0dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp" />

                <Button
                    android:id="@+id/btn_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="🗑️ Xóa"
                    android:textSize="12sp"
                    android:backgroundTint="@android:color/holo_red_light"
                    android:textColor="@android:color/white"
                    android:minWidth="0dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Nội dung câu hỏi -->
        <TextView
            android:id="@+id/tv_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nội dung câu hỏi sẽ hiển thị ở đây"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp"
            android:background="@drawable/input_background"
            android:padding="12dp" />

        <!-- Các lựa chọn -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🎯 Các lựa chọn:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/tv_option_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A. Lựa chọn A"
                android:textSize="14sp"
                android:background="@drawable/option_background_a"
                android:padding="8dp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_option_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="B. Lựa chọn B"
                android:textSize="14sp"
                android:background="@drawable/option_background_b"
                android:padding="8dp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_option_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="C. Lựa chọn C"
                android:textSize="14sp"
                android:background="@drawable/option_background_c"
                android:padding="8dp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tv_option_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="D. Lựa chọn D"
                android:textSize="14sp"
                android:background="@drawable/option_background_d"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Đáp án đúng -->
        <TextView
            android:id="@+id/tv_correct_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="✅ Đáp án đúng: A"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_dark"
            android:background="@drawable/correct_answer_background"
            android:padding="8dp"
            android:gravity="center" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
