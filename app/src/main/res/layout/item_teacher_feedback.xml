<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_feedback"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header với thông tin học viên -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_student_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tên học viên"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chưa phản hồi"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@android:color/holo_orange_dark"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

        </LinearLayout>

        <!-- Thông tin khóa học và ngày -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tv_course_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tên khóa học"
                android:textSize="14sp"
                android:textColor="@android:color/holo_blue_dark"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_feedback_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="28/01/2025"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray" />

        </LinearLayout>

        <!-- Nội dung feedback -->
        <TextView
            android:id="@+id/tv_feedback_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nội dung đánh giá của học viên..."
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"
            android:lineSpacingExtra="2dp" />

        <!-- Preview phản hồi nếu có -->
        <TextView
            android:id="@+id/tv_response_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phản hồi: Cảm ơn bạn đã đánh giá..."
            android:textSize="12sp"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="italic"
            android:background="@android:color/holo_green_light"
            android:padding="8dp"
            android:visibility="gone" />

        <!-- Action hint -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="👆 Nhấn để phản hồi"
            android:textSize="11sp"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
